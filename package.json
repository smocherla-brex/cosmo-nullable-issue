{
  "description": "WunderGraph Cosmo Federation Demos in TypeScript or Go",
  "scripts": {
    "services": "concurrently --kill-others-on-fail \"ts-node demos/typescript/employees/server.ts\" \"ts-node demos/typescript/family/server.ts\" \"ts-node demos/typescript/hobbies/server.ts\" \"ts-node demos/typescript/products/server.ts\"",
    "start": "concurrently \"npm run services\" \"wgc router download-binary; cd ./router && ./router\""
  },
  "devDependencies": {
    "@graphql-yoga/node": "^2.13.13",
    "@types/node": "^20.9.3",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.1"
  }
}